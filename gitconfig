[color]
  ui = auto

[color "diff"]
  meta = blue bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "branch"]
  current = yellow reverse
  local = yellow bold
  remote = green bold
  plain = red bold

[color "status"]
  added = green bold
  changed = yellow
  untracked = blue bold

[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  lg = log -p
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  la = log --pretty=format:'%Cgreen%h %Creset %Cred%d%Creset %s %Cblueby %an (%ar)' --graph --all
  ls = ls-files
  lfp = log --pretty=format:'%Cgreen%h %Creset %s %Cblueby %an (%ar) %Cred %d' --graph --first-parent
	branches = !legit branches
	publish = !legit publish
	unpublish = !legit unpublish
	sync = !legit sync
	switch = !legit switch
	resync = !legit resync
	undo = !legit undo

[hub]
  protocol = https

[core]
  pager = less -R
	editor = vim

[push]
  default = matching
[branch]
	autosetuprebase = always
[help]
	autocorrect = 1
[commit]
	gpgsign = true
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
